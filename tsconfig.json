{
  "compilerOptions": {
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs" ,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
        "*": ["node_modules/*", "src/types/*"]
    },
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true,
    "noImplicitAny": true,
        "moduleResolution": "node",
  },
  "include": ["./src/**/*"]
}
